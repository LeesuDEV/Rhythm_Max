<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="700dp"
    android:layout_gravity="center"
    android:background="@drawable/setting_background_shape"
    android:clipToPadding="false"
    android:elevation="40dp"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center|bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="RANKING"
            android:textSize="40dp"
            android:fontFamily="@font/netmarble_b"
            android:textColor="#EDEBEB"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:layout_marginLeft="10dp"

        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/selectSongImageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="15dp"
            android:background="@drawable/ranking_selectsong_image_corner"
            android:elevation="10dp"
            android:padding="2dp"
            android:scaleType="fitXY"
            android:src="@drawable/odysseus_img"
            android:layout_gravity="center"/>

            <TextView
                android:id="@+id/songNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:shadowColor="#000000"
                android:shadowDx="8"
                android:shadowDy="8"
                android:shadowRadius="10"
                android:text="Odysseus"
                android:textAlignment="center"
                android:textColor="#D1FCFD"
                android:textSize="25dp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/difficultyTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:shadowColor="#000000"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="5"
                android:text="★★★★★★★★"
                android:textAlignment="center"
                android:textColor="#ff0000"
                android:textSize="20dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal"
            android:id="@+id/ranking_plate"
            android:weightSum="10">
            <LinearLayout
                android:id="@+id/rankingNumLayout"
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|top"
                android:background="@drawable/ranking_rank_background_shape"
              >

            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="15dp"
                android:id="@+id/rankingNameLayout"
                android:layout_width="0dp"
                android:layout_weight="3.2"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|top">

            </LinearLayout>
            <LinearLayout
                android:id="@+id/rankingScoreLayout"
                android:layout_width="0dp"
                android:layout_weight="3.2"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|top">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/rankingAccuracyLayout"
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|top">

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:layout_margin="20dp"
        android:background="@drawable/result_judgment_background_shape"
        android:orientation="horizontal"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top">
            <TextView
                android:id="@+id/userNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="tngus97531"
                android:textSize="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/netmarble_m"
                android:textColor="#EDEBEB"
                />
            <TextView
                android:id="@+id/userScoreTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="NULL DATA"
                android:textSize="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/netmarble_m"
                android:textColor="#EDEBEB"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center|top"
            android:background="@drawable/ranking_rank_background_shape"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RANK"
                android:textSize="28dp"
                android:layout_marginTop="7dp"
                android:fontFamily="@font/netmarble_b"
                android:textColor="#EDEBEB"
                />
            <TextView
                android:id="@+id/myRankTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="NULL"
                android:textSize="32dp"
                android:fontFamily="@font/netmarble_b"
                android:textColor="#EDEBEB"
                />

        </LinearLayout> <!--myRankTV-->
    </LinearLayout>


</LinearLayout>