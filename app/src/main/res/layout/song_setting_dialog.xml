<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="470dp"
    android:layout_gravity="center"
    android:background="@drawable/select_menu_background"
    android:clipToPadding="false"
    android:elevation="40dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="#37252525">

            <ImageView
                android:id="@+id/selectSongImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="15dp"
                android:background="@drawable/select_image_corner"
                android:elevation="10dp"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/odysseus_img" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/songNameTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:shadowColor="#000000"
                    android:shadowDx="8"
                    android:shadowDy="8"
                    android:shadowRadius="10"
                    android:text="Odysseus"
                    android:textColor="#D1FCFD"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView

                    android:id="@+id/bpmTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:text="bpm : 185"
                    android:textColor="#FFFFFF"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/difficultyTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:text="★★★★★★★★"
                    android:textColor="#ff0000"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/cencelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="20dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="-"
            android:textColor="#E4E4E4"
            android:textSize="30dp"
            android:textStyle="bold" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="Best Score"
            android:textColor="#CC9905"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/myBestScoreTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="3011231"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="17dp" />
    </LinearLayout> <!-- 최고점수 텍스트뷰 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="Best Rate"
            android:textColor="#CC9905"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/myBestRateTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="99.8%"
            android:textStyle="bold"
            android:textColor="#FFBE00"
            android:textSize="18dp" />

    </LinearLayout> <!-- 정확도 텍스트뷰 -->


    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/myBestRankTV"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:shadowColor="#000000"
            android:shadowDx="15"
            android:shadowDy="15"
            android:shadowRadius="15"
            android:text="SS"
            android:textColor="#FFE7A3"
            android:textSize="45dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/myBestRankTV_S"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:shadowColor="#000000"
            android:shadowDx="15"
            android:shadowDy="15"
            android:shadowRadius="15"
            android:text="S"
            android:textColor="#FFDF82"
            android:textSize="45dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/myBestRankTV_A"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:shadowColor="#000000"
            android:shadowDx="15"
            android:shadowDy="15"
            android:shadowRadius="15"
            android:text="A"
            android:textColor="#CC9905"
            android:textSize="45dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/myBestRankTV_B"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:shadowColor="#000000"
            android:shadowDx="15"
            android:shadowDy="15"
            android:shadowRadius="15"
            android:text="B"
            android:textColor="#0091FF"
            android:textSize="45dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/myBestRankTV_C"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:shadowColor="#000000"
            android:shadowDx="15"
            android:shadowDy="15"
            android:shadowRadius="15"
            android:text="C"
            android:textColor="#8AFF4B"
            android:textSize="45dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/myBestRankTV_D"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:shadowColor="#000000"
            android:shadowDx="15"
            android:shadowDy="15"
            android:shadowRadius="15"
            android:text="D"
            android:textColor="#878787"
            android:textSize="45dp"
            android:visibility="gone" />
    </LinearLayout>  <!-- 랭크 텍스트뷰 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/startBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="#000000"
            android:shadowDx="15"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text=" START "
            android:textColor="#59FFD500"
            android:textSize="65dp"
            android:fontFamily="@font/netmarble_b"

            />
    </LinearLayout> <!-- 게임스타트 버튼 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/setSpeedBtn"
            android:layout_marginTop="2dp"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@drawable/button_shape"
            android:elevation="10dp"
            android:stateListAnimator="@null"
            android:text="3.5"
            android:textColor="#ffffff"
            android:textSize="23sp"
            android:textStyle="bold"
            android:translationZ="10dp"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"/>

        <Button
            android:id="@+id/setModeBtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_shape_mode"
            android:elevation="2dp"
            android:text="MIRR"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"/>

        <Button
            android:id="@+id/autoModBtn"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_shape_auto"
            android:elevation="2dp"
            android:text="Auto"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="5"/>


    </LinearLayout> <!-- 게임모드세팅 버튼들 -->

</LinearLayout>