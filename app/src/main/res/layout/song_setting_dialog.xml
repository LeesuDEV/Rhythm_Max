<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:layout_gravity="bottom"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/tpback">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#36000000"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/songNameTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:shadowColor="#000000"
                        android:shadowDx="8"
                        android:shadowDy="8"
                        android:shadowRadius="10"
                        android:text="Odysseus"
                        android:textColor="#D1FCFD"
                        android:textSize="22dp"
                        android:textStyle="bold" />

                    <TextView

                        android:id="@+id/bpmTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:shadowColor="#000000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="5"
                        android:text="bpm : 185"
                        android:textColor="#FFFFFF"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/difficultyTV"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:shadowColor="#000000"
                        android:shadowDx="3"
                        android:shadowDy="3"
                        android:shadowRadius="5"
                        android:text="★★★★★★★★"
                        android:textColor="#ff0000"
                        android:textSize="20dp" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:shadowColor="#000000"
                            android:shadowDx="3"
                            android:shadowDy="3"
                            android:shadowRadius="5"
                            android:text="Best Score"
                            android:textColor="#CC9905"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/myBestScoreTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="center|left"
                            android:shadowColor="#000000"
                            android:shadowDx="3"
                            android:shadowDy="3"
                            android:shadowRadius="5"
                            android:text="3011231"
                            android:textColor="#ffffff"
                            android:textSize="21dp"
                            android:textStyle="bold" />
                    </LinearLayout> <!-- 최고점수 텍스트뷰 -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:shadowColor="#000000"
                            android:shadowDx="3"
                            android:shadowDy="3"
                            android:shadowRadius="5"
                            android:text="Best Rate"
                            android:textColor="#CC9905"
                            android:textSize="18dp" />

                        <TextView
                            android:id="@+id/myBestRateTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="center|left"
                            android:shadowColor="#000000"
                            android:shadowDx="3"
                            android:shadowDy="3"
                            android:shadowRadius="5"
                            android:text="99.8%"
                            android:textColor="#FFBE00"
                            android:textSize="22dp"
                            android:textStyle="bold" />

                    </LinearLayout> <!-- 정확도 텍스트뷰 -->
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <ImageView
                    android:layout_width="115dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="30dp"
                    android:elevation="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/rank_ss_2" />
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ranking"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>
                    <ImageView
                        android:id="@+id/myBestRankImg"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/rank_s"
                        android:visibility="gone"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/cencelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:layout_marginRight="20dp"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:text="-"
                android:textColor="#E4E4E4"
                android:textSize="30dp"
                android:textStyle="bold" />
        </FrameLayout>
        <!-- 랭크 텍스트뷰 -->
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="9dp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/setSpeedBtn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/speedbtn_2x_img" />

            <ImageView

                android:id="@+id/gameModBtn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/mirrorbtn_img" />

            <ImageView
                android:id="@+id/autoModBtn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/nonebtn_img" />


        </LinearLayout> <!-- 게임모드세팅 버튼들 -->
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/startBtn"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                android:layout_marginRight="17dp"
                android:src="@drawable/startbtn_img_new"
                android:layout_marginLeft="17dp"/>
        </LinearLayout> <!-- 게임스타트 버튼 -->

    </LinearLayout>
</LinearLayout>