<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    android:layout_gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/tpback"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:weightSum="10"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="6">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/songNameTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:shadowColor="#000000"
                            android:shadowDx="8"
                            android:shadowDy="8"
                            android:shadowRadius="10"
                            android:text=""
                            android:textColor="#D1FCFD"
                            android:textSize="27dp"
                            android:textStyle="bold" />

                        <TextView

                            android:id="@+id/bpmTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:shadowColor="#000000"
                            android:shadowDx="3"
                            android:shadowDy="3"
                            android:shadowRadius="5"
                            android:text=""
                            android:textColor="#FFFFFF"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/difficultyTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:shadowColor="#000000"
                            android:shadowDx="3"
                            android:shadowDy="3"
                            android:shadowRadius="5"
                            android:text=""
                            android:textColor="#ff0000"
                            android:textSize="20dp"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:shadowColor="#000000"
                                android:shadowDx="3"
                                android:shadowDy="3"
                                android:shadowRadius="5"
                                android:text="Best Score"
                                android:textColor="#CC9905"
                                android:textSize="20dp" />

                            <TextView
                                android:id="@+id/myBestScoreTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:gravity="center|left"
                                android:shadowColor="#000000"
                                android:shadowDx="3"
                                android:shadowDy="3"
                                android:shadowRadius="5"
                                android:text=""
                                android:textColor="#ffffff"
                                android:textSize="21dp"
                                android:textStyle="bold" />
                        </LinearLayout> <!-- 최고점수 텍스트뷰 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:shadowColor="#000000"
                                android:shadowDx="3"
                                android:shadowDy="3"
                                android:shadowRadius="5"
                                android:text="Best Rate"
                                android:textColor="#CC9905"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/myBestRateTV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:gravity="center|left"
                                android:shadowColor="#000000"
                                android:shadowDx="3"
                                android:shadowDy="3"
                                android:shadowRadius="5"
                                android:text=""
                                android:textColor="#FFBE00"
                                android:textSize="22dp"
                                android:textStyle="bold" />

                        </LinearLayout> <!-- 정확도 텍스트뷰 -->
                </LinearLayout>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="4">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|top"
                        android:orientation="vertical"
                        android:layout_marginLeft="8dp">
                        <ImageView
                            android:id="@+id/myBestRankImg"
                            android:layout_width="126dp"
                            android:layout_height="90dp"
                            android:layout_marginTop="8dp"
                            android:elevation="10dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/rank_ss"
                            android:visibility="visible"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="3"
                            android:layout_marginTop="30dp"
                            >
                            <ImageView
                                android:gravity="center|center_vertical"
                                android:id="@+id/imageView2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:padding="6dp"
                                app:srcCompat="@drawable/ranking" />

                            <TextView
                                android:layout_marginRight="8dp"
                                android:gravity="center|center_vertical"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:fontFamily="@font/netmarble_m"
                                android:shadowColor="#000000"
                                android:ems="4"
                                android:maxLines="1"
                                android:shadowDx="3"
                                android:shadowDy="3"
                                android:shadowRadius="3"
                                android:text="RANK"
                                android:textColor="#FFE279"
                                android:textSize="26sp" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </FrameLayout>
        <!-- 랭크 텍스트뷰 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="18dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/setSpeedBtn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/speedbtn_2x_img" />

            <ImageView

                android:id="@+id/gameModBtn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/mirrorbtn_img" />

            <ImageView
                android:id="@+id/autoModBtn"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/nonebtn_img" />


        </LinearLayout> <!-- 게임모드세팅 버튼들 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/startBtn"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:scaleType="fitXY"
                android:src="@drawable/startbtn_img" />
        </LinearLayout> <!-- 게임스타트 버튼 -->

    </LinearLayout>
</LinearLayout>