<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="340dp"
    android:layout_height="250dp"
    android:background="#CDB6B6"
    android:orientation="vertical"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/selectSongImageView"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:layout_margin="15dp"
            android:src="@drawable/odysseus_img" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/songNameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Odysseus"
                android:textSize="23dp" />

            <TextView
                android:id="@+id/bpmTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bpm : 185" />

            <TextView
                android:id="@+id/difficultyTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="★★★★★★★★"
                android:textColor="#ff0000"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/setEasyBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00FF0000"
            android:text="Easy"
            android:textColor="#ff0000"
            android:textSize="25dp" />

        <Button
            android:id="@+id/setHardBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:background="#00FF0000"
            android:text="Hard"
            android:textSize="25dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:text="내 최고점수 : " />

        <TextView
            android:id="@+id/myBestScoreTV"
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:gravity="center|left"
            android:text="3011231"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/startBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="시작"
            android:textSize="20dp" />

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"

            android:text="취소"
            android:textSize="20dp" />

    </LinearLayout>
</LinearLayout>