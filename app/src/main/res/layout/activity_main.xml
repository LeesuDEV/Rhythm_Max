<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/userNameTV"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="tngus97531 님"
        android:textColor="@color/white"
        android:fontFamily="@font/netmarble_b"
       android:layout_gravity="center|top"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="25dp"/>

    <ImageView
        android:id="@+id/settingIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="top|right"
        android:src="@drawable/main_setting_icon"
        android:layout_margin="10dp"/>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/setEasyBtn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:text="EASY"
            android:gravity="center"
            android:textSize="22dp"
            android:textColor="#FFFFFF"
            android:elevation="40dp"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowColor="#000000"
            android:shadowRadius="10"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/netmarble_b"
            />
        <TextView
            android:id="@+id/setHardBtn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:text="HARD"
            android:gravity="center"
            android:textSize="22dp"
            android:textColor="#787878"
            android:elevation="40dp"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowColor="#000000"
            android:shadowRadius="10"
            android:fontFamily="@font/netmarble_b"
            />
    </LinearLayout> <!-- 이지 하드 버튼 -->

    <FrameLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/musicController"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:lottie_rawRes="@raw/song_ani"
            android:layout_gravity="right|center"
            android:layout_marginRight="20dp"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>

    </FrameLayout> <!-- 이지 하드 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_marginTop="200dp">
        <com.jackandphantom.carouselrecyclerview.CarouselRecyclerview
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            >
        </com.jackandphantom.carouselrecyclerview.CarouselRecyclerview>


        <TextView
            android:id="@+id/songNameMainTV"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:text="Odysseus"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowColor="#000000"
            android:shadowRadius="10"
            android:background="@drawable/main_title_background_shape"
            android:fontFamily="@font/netmarble_b"
            />


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/songDifficultyMainTV"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowColor="#000000"
            android:shadowRadius="5"
            android:text="★★★★★★★★★"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#ff0000"/>

    </LinearLayout> <!-- 곡정보 표시 -->

    <TextView
        android:id="@+id/rankingBtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="RANKING"
        android:textColor="#FFEB3B"
        android:fontFamily="@font/netmarble_b"
        android:layout_gravity="center|bottom"
        android:textAlignment="center"
        android:layout_marginBottom="50dp"
        android:textSize="30dp"/>

</FrameLayout>