<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#474747">

    <LinearLayout
        android:layout_marginTop="90dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:background="#dfdfdf"
        android:visibility="gone">
        <LinearLayout
            android:id="@+id/odysseus"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:background="#1EFF0000">
            <ImageView
                android:id="@+id/firstImageView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:src="@drawable/odysseus_img"/>
            <TextView
                android:id="@+id/firstNameTV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="Odysseus"
                android:textColor="#00AEFF"
                android:textSize="30dp"
                android:gravity="center|left"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/firstDifficultyTV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="★★★★★★"
                android:textSize="20dp"
                android:textColor="#ff0000"
                android:gravity="center|left"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Xeus"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:background="#1EFF0000">
            <ImageView
                android:id="@+id/twoImageView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:src="@drawable/xeus_img"/>
            <TextView
                android:id="@+id/twoNameTV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="Xeus"
                android:textColor="#00AEFF"
                android:textSize="30dp"
                android:gravity="center|left"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/twoDifficultyTV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="★★★★★★"
                android:textSize="20dp"
                android:textColor="#ff0000"
                android:gravity="center|left"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Limbo"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="10"
            android:background="#1EFF0000">
            <ImageView
                android:id="@+id/threeImageView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:layout_margin="5dp"
                android:src="@drawable/limbo_img"/>
            <TextView
                android:id="@+id/threeNameTV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="Limbo"
                android:textColor="#00AEFF"
                android:textSize="30dp"
                android:gravity="center|left"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/threeDifficultyTV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="★★★★★★"
                android:textSize="20dp"
                android:textColor="#ff0000"
                android:gravity="center|left"
                android:layout_marginLeft="40dp"
                android:textStyle="bold"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/setEasyBtn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:text="EASY"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#FFD500"
            android:elevation="40dp"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowColor="#000000"
            android:shadowRadius="10"
            android:layout_marginRight="40dp"
            />
        <TextView
            android:id="@+id/setHardBtn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:text="HARD"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#780F80"
            android:elevation="40dp"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowColor="#000000"
            android:shadowRadius="10"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_marginTop="200dp">
        <com.jackandphantom.carouselrecyclerview.CarouselRecyclerview
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            >
        </com.jackandphantom.carouselrecyclerview.CarouselRecyclerview>


        <TextView
            android:id="@+id/songNameMainTV"
            android:layout_width="300dp"
            android:layout_height="65dp"
            android:layout_gravity="center"
            android:text="Odysseus"
            android:gravity="center"
            android:textSize="45dp"
            android:textColor="#03AFFF"
            android:shadowDx="10"
            android:shadowDy="10"
            android:shadowColor="#000000"
            android:shadowRadius="10"
            android:background="@drawable/main_title_background"
            />


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/songDifficultyMainTV"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:shadowDx="4"
            android:shadowDy="4"
            android:shadowColor="#000000"
            android:shadowRadius="5"
            android:text="★★★★★★★★★"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="#ff0000"/>

    </LinearLayout>


    <Switch
        android:layout_marginBottom="110dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="타격음ON/OFF"
        android:checked="true"
        android:id="@+id/ClapSoundSwitch"
        android:visibility="gone"/>

    <Button
        android:layout_marginBottom="95dp"
        android:layout_marginRight="140dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="1배속"
        android:id="@+id/speedSetBtn"
        android:visibility="gone"/>

    <Button
        android:layout_marginBottom="50dp"
        android:layout_marginRight="140dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="PlayMod"
        android:id="@+id/autoModBtn"
        android:visibility="gone"/>

    <EditText
        android:layout_marginBottom="5dp"
        android:layout_marginRight="140dp"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:textAlignment="center"
        android:text=""
        android:hint="sync"
        android:id="@+id/syncET"
        android:visibility="gone"
        />

    <Button
        android:layout_marginBottom="5dp"
        android:layout_marginRight="70dp"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|center"
        android:text="set"
        android:id="@+id/syncBtn"
        android:visibility="gone"/>

    <TextView
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:textSize="20dp"
        android:text="0"
        android:id="@+id/syncTV"
        android:visibility="gone"/>

    <Button
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="bottom|right"
        android:text="블루투스SET"
        android:id="@+id/bluetoothBtn"
        android:visibility="gone"/>

</FrameLayout>