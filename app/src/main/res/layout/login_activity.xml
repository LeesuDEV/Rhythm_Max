<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    android:background="@drawable/main_background_img">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="40dp">
        <ImageView
            android:id="@+id/titleCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/login_circle_img"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/login_gamelogo_img"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center|top"
        android:orientation="vertical"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="환영합니다"
            android:textAlignment="center"
            android:textSize="45dp"
            android:textStyle="bold"
            android:fontFamily="@font/netmarble_m"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/nickname"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Empty 님"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:paddingBottom="30dp"
            android:fontFamily="@font/netmarble_m"/>

        <ImageView
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/kakao_login_medium_wide"
            android:visibility="gone"/>

        <Button
            android:id="@+id/startup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="해당 카카오계정으로 계속하기"
            android:textSize="15dp"
            android:textColor="#ffffff"
            android:visibility="visible"
            android:background="@drawable/login_keep_button_shape"
            android:fontFamily="@font/netmarble_m"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <!--TextView
            android:id="@+id/simpleAccountLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="간편계정으로 시작하기"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/netmarble_m"/>
        <TextView
            android:id="@+id/simpleAccountRegister"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="간편계정 가입"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/netmarble_m"/-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/titilebar"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"/>

        <ImageView
            android:id="@+id/simpleAccountLogin"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:src="@drawable/login_logo_img"/>
        <ImageView
            android:id="@+id/simpleAccountRegister"
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:src="@drawable/login_register_logo_img"/>
    </LinearLayout>
</LinearLayout>