<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|top"
            android:orientation="horizontal"
            android:weightSum="10">

            <FrameLayout
                android:id="@+id/noteView"
                android:layout_width="0dp"
                android:layout_height="700dp"
                android:layout_gravity="top|center"
                android:layout_weight="8.5"
                android:background="#000000"
                android:orientation="horizontal">

                <VideoView
                    android:id="@+id/videoView"
                    android:layout_width="450dp"
                    android:layout_height="260dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="65dp" />


                <ImageView
                    android:layout_width="450dp"
                    android:layout_height="260dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="65dp"
                    android:visibility="gone" /> <!--테스팅용 이미지사진 첨부-->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="65dp"
                    android:background="@drawable/game_video_foreground_shape"
                    android:visibility="visible" />

                <LinearLayout
                    android:id="@+id/lineLight"
                    android:layout_width="match_parent"
                    android:layout_height="600dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <ImageView
                        android:id="@+id/lane1_light"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/line_light"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/lane2_light"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/line_light"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/lane3_light"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/line_light"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/lane4_light"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:src="@drawable/line_light"
                        android:visibility="invisible" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>


        <com.example.rhythmproto.JudgmentLineView
            android:id="@+id/judgmentLineView"
            android:layout_width="345dp"
            android:layout_height="700dp"
            android:layout_gravity="top|center" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/game_gear" />

        <ProgressBar
            android:id="@+id/health_Bar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="400dp"
            android:layout_height="15dp"
            android:layout_marginLeft="-183.5dp"
            android:layout_marginTop="300dp"
            android:max="100"
            android:progress="40"
            android:rotation="270" /> <!--체력바-->

        <FrameLayout
            android:id="@+id/hitEffect"
            android:layout_width="345dp"
            android:layout_height="80dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="520dp"
            android:orientation="horizontal">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view1"
                android:layout_width="86.25dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:visibility="invisible" />  <!-- 초기에는 보이지 않도록 설정 -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view2"
                android:layout_width="86.25dp"
                android:layout_height="80dp"
                android:layout_marginLeft="86.25dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:visibility="invisible" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view3"
                android:layout_width="86.25dp"
                android:layout_height="80dp"
                android:layout_marginLeft="172.5dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:visibility="invisible" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view4"
                android:layout_width="86.25dp"
                android:layout_height="80dp"
                android:layout_marginLeft="258.75dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:visibility="invisible" />
        </FrameLayout> <!-- 판정 폭죽효과 -->

        <Button
            android:id="@+id/quitGameBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:background="@drawable/exit_btn"
            android:focusable="false" />

        <Button
            android:id="@+id/enterPrevent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="350sp"
            android:layout_height="match_parent"
            android:layout_gravity="top|center"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/judgmentTV"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/comboTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="55dp"
             android:text="0"
            android:textColor="#8FFFFFFF"
            android:textSize="80sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/scoreTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="10dp"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#CEFFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/accuracyTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="0.0%"
            android:textColor="#BCBCBC"
            android:textStyle="bold" />

    </FrameLayout>

</LinearLayout>