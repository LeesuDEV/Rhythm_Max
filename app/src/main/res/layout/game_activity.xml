<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000">

        <FrameLayout
            android:layout_width="345dp"
            android:layout_height="700dp"
            android:layout_gravity="top|center"
            android:orientation="horizontal"
            android:background="#000000"
            android:id="@+id/noteView">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="600dp"
                android:weightSum="4"
                android:id="@+id/lineLight">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/line_light"
                    android:scaleType="fitXY"
                    android:id="@+id/lane1_light"
                    android:visibility="invisible"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/line_light"
                    android:scaleType="fitXY"
                    android:id="@+id/lane2_light"
                    android:visibility="invisible"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/line_light"
                    android:scaleType="fitXY"
                    android:id="@+id/lane3_light"
                    android:visibility="invisible"/>
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/line_light"
                    android:scaleType="fitXY"
                    android:id="@+id/lane4_light"
                    android:visibility="invisible"/>
            </LinearLayout>
        </FrameLayout>

        <com.example.rhythmproto.JudgmentLineView
            android:layout_width="345dp"
            android:layout_height="700dp"
            android:layout_gravity="top|center"
            android:id="@+id/judgmentLineView"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/gear"
            android:scaleType="fitXY"/>

        <ProgressBar
            android:id="@+id/health_Bar"
            android:layout_width="400dp"
            android:layout_height="15dp"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="-183.5dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:rotation="270"
            android:max="100"
            android:progress="40"
            /> <!--체력바-->

        <FrameLayout
            android:layout_marginTop="520dp"
            android:orientation="horizontal"
            android:layout_width="345dp"
            android:layout_height="80dp"
            android:layout_gravity="top|center"
            android:id="@+id/hitEffect">
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view1"
                android:layout_width="86.25dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:scaleType="fitXY"
                />  <!-- 초기에는 보이지 않도록 설정 -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view2"
                android:layout_marginLeft="86.25dp"
                android:layout_width="86.25dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:scaleType="fitXY"
                />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view3"
                android:layout_marginLeft="172.5dp"
                android:layout_width="86.25dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:scaleType="fitXY"
                />
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/animation_view4"
                android:layout_marginLeft="258.75dp"
                android:layout_width="86.25dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:scaleType="fitXY"
                />
        </FrameLayout> <!-- 판정 폭죽효과 -->

        <Button
            android:layout_margin="5dp"
            android:id="@+id/quitGameBtn"
            android:layout_gravity="right"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:text="X"
            android:background="#8E1212" />

        <LinearLayout
            android:layout_width="350sp"
            android:layout_height="match_parent"
            android:layout_gravity="top|center"
            android:orientation="horizontal"
            android:weightSum="4">

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#00ff0000"
                android:gravity="center"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25dp" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="70dp"
            android:id="@+id/judgmentTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            android:visibility="visible"/>

        <TextView
            android:layout_marginTop="120dp"
            android:id="@+id/comboTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:text="0"
            android:textColor="#979797"
            android:textSize="70sp"
            android:textStyle="bold"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/scoreTV"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#ECECEC"
            android:textSize="18sp"
            android:textStyle="bold" />

    </FrameLayout>
</LinearLayout>